{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mutenix",
  "version": "0.1.0",
  "identifier": "info.bilger.mutenix",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "src"
  },
  "app": {
    "windows": [
      {
        "title": "Mutenix",
        "width": 1000,
        "height": 1000,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "hiddenTitle": false,
        "acceptFirstMouse": false,
        "tabbingIdentifier": "main"
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "main",
      "iconPath": "assets/icon_active_32.png",
      "iconAsTemplate": false,
      "tooltip": "Mutenix - Device & Teams Control"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "assets/icon_active_32.png",
      "assets/icon_active_64.png",
      "assets/mutenix_logo_finalicon_active.png",
      "icons/icon.icns",
      "assets/mutenix.ico"
    ],
    "publisher": "Matthias Bilger",
    "copyright": "Copyright (c) 2025 Matthias Bilger",
    "category": "Utility",
    "shortDescription": "HID Device and Microsoft Teams Control",
    "longDescription": "A system tray application for controlling HID devices and Microsoft Teams meetings with customizable button actions",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "exceptionDomain": ""
    }
  },
  "plugins": {}
}
